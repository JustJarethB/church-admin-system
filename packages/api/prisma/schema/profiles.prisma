model Profiles {
    id             String        @id @db.Uuid
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
    user           AppUsers      @relation("ProfileUser", fields: [userId], references: [id])
    userId         String        @db.Uuid
    organisation   Organisations @relation(fields: [organisationId], references: [id])
    organisationId String        @db.Uuid
    teams          Teams[]
    creator        AppUsers      @relation("ProfileCreator", fields: [creatorId], references: [id])
    creatorId      String        @db.Uuid
    permissions    String[]

    @@unique([userId, organisationId])
    @@schema("public")
}

model Teams {
    id             String        @id @db.Uuid
    createdAt      DateTime      @default(now())
    updatedAt      DateTime      @updatedAt
    name           String
    description    String?
    organisation   Organisations @relation(fields: [organisationId], references: [id])
    organisationId String        @db.Uuid
    creator        AppUsers      @relation(fields: [creatorId], references: [id])
    creatorId      String        @db.Uuid
    Profiles       Profiles[]

    @@schema("public")
}
